<h1>Your review: </h1>

<%= simple_form_for [@restaurant, @review] do |f|%>
  <%= f.input :rating, collection: 0..5%>
  <%= f.input :content %>
  <%= f.submit "Add a review", class: "btn btn-danger" %>
<% end %>
<br>
<br>
<%= link_to restaurant_path(@restaurant) do %>
  <i class="fas fa-undo-alt"></i>
<% end %>

